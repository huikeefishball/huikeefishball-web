@import "../styles/variables"

.intro
  position relative

  padding-top 40px
  padding-bottom 157px

  @media screen and (max-width screen-mobile)
    padding-bottom 60px

  .intro-content
    margin-top 80px
    max-width 800px

    @media screen and (max-width screen-mobile)
      margin-top 40px

  .description
    margin-top 40px
    text-align center

.list
  @media screen and (min-width (screen-mobile + 1px)) and (max-width screen-desktop)
    ul
      display flex
      flex-wrap wrap

      margin-left -20px
      margin-right @margin-left

      li
        width 50%

        padding-left 20px
        padding-right @padding-left
  
  @media screen and (max-width screen-mobile)
    padding-left 0
    padding-right @padding-left
