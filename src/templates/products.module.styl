@import "../styles/variables"

.list
  @media screen and (min-width (screen-mobile + 1px)) and (max-width screen-desktop)
    ul
      display flex
      flex-wrap wrap

      margin-left -20px
      margin-right @margin-left

      li
        width 50%

        padding-left 20px
        padding-right @padding-left
  
  @media screen and (max-width screen-mobile)
    padding-left 0
    padding-right @padding-left
