@import "../styles/variables"

.about
  > div
    padding-top 80px
    padding-bottom @padding-top

    @media screen and (max-width screen-mobile)
      padding-top (@padding-top / 2)
      padding-bottom @padding-top

    max-width 782px

    h2
      padding-top (@padding-top / 2)

.video
  position relative

  background black

  padding-top 56.6037735849%

  &::after
  > video
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    width 100%
    height 100%

  &::after
    content ''
    background-image url(../assets/video-mask.png)

.certification
  > div
    padding-bottom 40px
    padding-top (@padding-bottom * 2)

    @media screen and (min-width (screen-mobile + 1px))
      display flex
      align-items center

      > *
        flex 1

        &:first-child
          margin-right 60px
    
    @media screen and (max-width screen-mobile)
      padding-top @padding-bottom
      text-align center

      ul
        margin-bottom @padding-bottom

  ul
    font-weight bold

.team
  > div
    padding-bottom 80px

    @media screen and (max-width screen-mobile)
      padding-bottom (@padding-bottom / 2)

    max-width 580px

    > div
      padding-top (@padding-bottom / 2)

      @media screen and (max-width screen-mobile)
        border-top 1px solid #D9D9D9
