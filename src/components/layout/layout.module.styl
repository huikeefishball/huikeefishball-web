@import "../../styles/variables"

.root
  display flex
  flex-direction column
  min-height 100vh

  > div
    flex-grow 1

  > footer
    flex-shrink 0

.content
  position relative

  > *:last-child
    @media screen and (max-width (screen-desktop - 1px))
      padding-bottom 204px

.sidebar
  position fixed
  z-index 100
  right 40px
  bottom 70px

  transition opacity 0.2s ease

  @media screen and (max-width screen-mobile)
    right 20px

  ul
    li:not(:first-child)
      margin-top 12px

  &-item
    > *
      display block
      background #333
      border none

      width 60px
      height @width

      border-radius 50%

      padding 0

      cursor pointer

      &:hover
        background lighten(@background, 10)

      > img
        display block
        width inherit
        height @width
        object-fit none
        object-position 50% 50%

    &:last-child > *
      background theme-yellow

      &:hover
        background darken(theme-yellow, 10)
